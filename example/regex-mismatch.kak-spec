kak-spec \
    -title "Test matching against a regular expression (this should fail)" \
    -input "one-two-three" \
    -expect-%val(selection) "regex(\d)"

kak-spec \
    -title "Test matching against an anchored regular expression (this should fail)" \
    -input "zero-one-two-three" \
    -expect-%val(selection) "regex(^\w+-\w+-\w+$)"
